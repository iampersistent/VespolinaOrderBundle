<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="vespolina.sales_order.sales_order_manager.class">Vespolina\OrderBundle\Document\SalesOrderManager</parameter>
        <parameter key="vespolina.sales_order.model.sales_order.class">Vespolina\OrderBundle\Document\SalesOrder</parameter>
        <parameter key="vespolina.sales_order.model.sales_order_item.class">Vespolina\OrderBundle\Document\SalesOrderItem</parameter>
        <parameter key="vespolina.sales_order.model.fulfillment_agreement.class">Vespolina\OrderBundle\Document\FulfillmentAgreement</parameter>
        <parameter key="vespolina.sales_order.model.payment_agreement.class">Vespolina\OrderBundle\Document\PaymentAgreement</parameter>
    </parameters>

    <services>
        <service id="vespolina_sales_order.sales_order_manager" class="%vespolina.sales_order.sales_order_manager.class%">
            <argument type="service" id="doctrine.odm.mongodb.default_document_manager" />
            <argument>%vespolina.sales_order.model.sales_order.class%</argument>
            <argument>%vespolina.sales_order.model.sales_order_item.class%</argument>
            <argument>%vespolina.sales_order.model.fulfillment_agreement.class%</argument>
            <argument>%vespolina.sales_order.model.payment_agreement.class%</argument>
            <call method="setEventDispatcher">
                <argument type="service" id="event_dispatcher"/>
            </call>
        </service>
        <service id="vespolina_sales_order.order_manager" alias="vespolina_sales_order.sales_order_manager" />
    </services>
</container>
